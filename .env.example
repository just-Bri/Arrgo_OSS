# Arrgo Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Database Configuration
DATABASE_URL=postgres://arrgo:your-db-password@db:5432/arrgo?sslmode=disable
POSTGRES_USER=arrgo
POSTGRES_PASSWORD=your-db-password
POSTGRES_DB=arrgo

# Session Security
SESSION_SECRET=change-me-in-production-generate-a-random-secret-here

# Server Configuration
PORT=5003
ENV=development
DEBUG=true
BUILD_VERSION=1
PUID=99
PGID=100
GOLOG_LOG_LEVEL=debug

# Media Paths
MEDIA_PATH=/mnt/user/media
MOVIES_PATH=/data/movies
SHOWS_PATH=/data/shows
INCOMING_MOVIES_PATH=/data/incoming/movies
INCOMING_SHOWS_PATH=/data/incoming/shows

# API Keys (Required for metadata and subtitles)
TMDB_API_KEY=your-tmdb-api-key-here
TVDB_API_KEY=your-tvdb-api-key-here
OPENSUBTITLES_API_KEY=your-opensubtitles-api-key-here
OPENSUBTITLES_USER=your-opensubtitles-username
OPENSUBTITLES_PASS=your-opensubtitles-password

# qBittorrent Configuration
QBITTORRENT_URL=http://qbittorrent:8080
QBITTORRENT_USER=admin
QBITTORRENT_PASS=your-qbittorrent-password

# Cloudflare Bypass (Optional - for Flaresolverr)
CLOUDFLARE_BYPASS_URL=http://host.docker.internal:8191

# VPN Configuration (for qBittorrent VPN container - Private Internet Access)
VPN_ENABLED=yes
VPN_PROV=pia
PIA_USER=your-pia-username
PIA_PASSWORD=your-pia-password
PIA_REMOTE=  # Optional: e.g., "us-california.privacy.network" or leave empty for auto

# Timezone and Network
TZ=America/Los_Angeles
LAN_NETWORK=192.168.1.0/24
SERVER_IP=192.168.1.100

# Admin User Seed (for initial admin account creation)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-on-first-login
ADMIN_EMAIL=admin@arrgo.local