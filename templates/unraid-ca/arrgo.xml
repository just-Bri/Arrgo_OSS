  <Config Name="WebUI Port" Target="5003" Default="5003" Mode="tcp" Description="The port Arrgo will listen on." Type="Port" Display="always" Required="true" Mask="false">5003</Config>
  <Config Name="Database URL" Target="DATABASE_URL" Default="" Mode="" Description="Connection string for PostgreSQL (e.g., postgres://arrgo:password@192.168.1.100:5432/arrgo)" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="TMDB API Key" Target="TMDB_API_KEY" Default="" Mode="" Description="API Key from TheMovieDB." Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="TVDB API Key" Target="TVDB_API_KEY" Default="" Mode="" Description="API Key from TheTVDB." Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="Session Secret" Target="SESSION_SECRET" Default="" Mode="" Description="Secure key for session management (generate a random string)." Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="Admin Password" Target="ADMIN_PASSWORD" Default="" Mode="" Description="Initial password for the seeded admin account." Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="Media Storage" Target="/data" Default="/mnt/user/media" Mode="rw" Description="Root path to your media library shares." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/media</Config>
  <Config Name="AppData/Posters" Target="/root/data/posters" Default="/mnt/user/appdata/arrgo/posters" Mode="rw" Description="Storage for posters and metadata indices." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/arrgo/posters</Config>
  <Config Name="qBittorrent WebUI URL" Target="QBITTORRENT_URL" Default="http://[SERVER_IP]:8080" Mode="" Description="Connection URL for qBittorrent." Type="Variable" Display="always" Required="false" Mask="false">http://[SERVER_IP]:8080</Config>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID for file permissions (Unraid default: 99)." Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID for file permissions (Unraid default: 100)." Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
  <Config Name="Movies Subpath" Target="MOVIES_PATH" Default="/data/movies" Mode="" Description="Container subpath for movies." Type="Variable" Display="advanced" Required="false" Mask="false">/data/movies</Config>
  <Config Name="TV Shows Subpath" Target="SHOWS_PATH" Default="/data/shows" Mode="" Description="Container subpath for shows." Type="Variable" Display="advanced" Required="false" Mask="false">/data/shows</Config>
</Container>
